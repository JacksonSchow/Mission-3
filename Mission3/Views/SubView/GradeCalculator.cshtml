@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalculatorModel;

<br />
<div class="row">
    <div class="col-2"></div>
    <div class="col-8 text-center">
        <!--grade calculator to calculate a student's grade in IS 413-->
        <h4>Grade Calculator</h4>
        <p>Input all fields in decimal format (i.e., 0.XX)</p>
        <form class="form" method="post">
            <label for="assignments">Assignments:</label><br />
            <input type="text" id="assignments" asp-for="Assignments" />
            <br />
            <label for="projects">Group Projects:</label><br />
            <input type="text" id="projects" asp-for="Projects" />
            <br />
            <label for="quizzes">Quizzes:</label><br />
            <input type="text" id="quizzes" asp-for="Quizzes" />
            <br />
            <label for="exams">Exams:</label><br />
            <input type="text" id="exams" asp-for="Exams" />
            <br />
            <label for="intex">INTEX:</label><br />
            <input type="text" id="intex" asp-for="Intex" />
            <br /><br />
            <input type="submit" class="btn btn-primary" id="button" value="Calculate Grade">

            <!--data validation summary put in for the form-->
            <div asp-validation-summary="All"></div>
        </form>
        <br />
    </div>
    <div class="col-2"></div>
</div>